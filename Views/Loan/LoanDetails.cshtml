@model Bell.ViewModels.Loan.LoanDetailsViewModel

<div class="container-fluid col-sm-12 col-md-6 col-lg-6 col-xl-6">
    <div class="row">
        <img class="backgroundWhite mx-auto d-block border border-secondary rounded" src="/@Model.LocalBook.BookCoverThumbnailUrl" alt="book cover image">
    </div>
</div>

<div class="container-fluid col-sm-12 col-md-6 col-lg-6 col-xl-6">
    <div class="backgroundWhite col-12">
        <h3>@Model.LocalBook.Name</h3>
        <h4>Author: @Model.LocalBook.Author</h4>
        <p class="synposis"><b>Synopsis:</b> @Model.LocalBook.Description</p>  
        <p><a asp-controller="Loan" asp-action="LoanList">Back to My Loans</a></p>
    </div>
</div>

